{
    "name": "t4web/cron",
    "description": "ZF2 Module. A PHP cron task manager for ZF2 Application",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf2", "zf2 module", "cron"
    ],
    "homepage": "https://github.com/t4web/Cron",
    "authors": [
        {
            "name": "Max Gulturyan",
            "email": "gulturyan@gmail.com",
            "homepage": "http://about.me/maxgu"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",

        "zendframework/zend-console": "^2.5",
        "zendframework/zend-eventmanager": "^2.5",
        "zendframework/zend-http": "^2.5",
        "zendframework/zend-modulemanager": "^2.5",
        "zendframework/zend-mvc": "^2.5",
        "zendframework/zend-servicemanager": "^2.5",
        "zendframework/zend-view": "^2.5",

        "cron/cron": "~1.0",

        "t4web/event-subscriber": "^0.0.10"
    },
    "require-dev" : {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "T4web\\Cron\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "T4web\\CronTest\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always"
    }
}
